<% layout('/layouts/boilerplate') -%>

  <% if(recipes && recipes.length){%>
    <span style="text-decoration: underline;" class="mb-4"><h1 class="text-center">Your Faverouted :</h1></span>
<br>
      <div class="recipe-container mt-4" style="display: flex; justify-content: space-evenly; align-items: center;">
        <% for(recipe of recipes){ %>
          <div class="card-container">
            <a href="/recipes/show/<%= recipe._id %>">
              <div class="img-container">
                <img src="<%= recipe.image.url %>" loading="lazy" alt="image" />
              </div>
            </a>
            <div class="text-container" style="width: 90%;">
              <div style="display: flex; align-items: center; justify-content: space-between;">
                <p class="recipe-title">
                  <%= recipe.title %>
                </p>
                <span style="font-size: .7rem;"><i class="fa-solid fa-eye"></i> <%= recipe.views %></span>
                <i class="fa-solid fa-xmark removeFav" data-id="<%= recipe._id %>" 
                  style="font-size: 1.5rem;cursor: pointer; color: rgba(29, 27, 27, 0.2);" title="Remove from Cart"></i>

              </div>
              <p class="recipe-desc"><span>Desc :</span>
                <%= recipe.description %>
              </p>
          </div>
      </div>

      <% } %>
        </div>
<% } %>

<%if(recipes.length ==0){%>
 
  <div class="cart" style="width: 600px; height: 600px; margin: 0 auto;">
    <p class="text-center">Oops! No recipes are added yet</p>
    <img src="/Images/EmptyCart.jpg" alt="empty cart" style="width: 100%; height: 100%; margin: 0 auto;">
  </div>
<%}%>