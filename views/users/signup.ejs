<% layout('/layouts/boilerplate') -%>

<body>
    <div class="signup-container">
        <!-- Left: Signup Form -->
        <div class="form-section">
            <h1>Create Account</h1>

            <form action="/signup" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="fullname">Full Name</label>
                    <input type="text" id="fullname" name="fullname" required>
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="form-group">
                    <label for="profile_image">Profile Image (Optional)</label>
                    <input type="file" id="profile_image" name="profile_image" accept="image/*">
                </div>
                
                <button type="submit" class="signup-btn" id="sign">Sign Up</button>
            </form>
            <p class="mt-3">Already a member ? <a href="/login">login</a></p>

        </div>

        <!-- Right: Image Section -->
        <div class="image-section">
            <img src="/Images/signup-transf.jpg" alt="Signup Image">
        </div>
    </div>
</body>

<script>
    if (window.history.replaceState && window.location.pathname === '/signUp') {
        window.history.replaceState(null, null, '/recipes');
    }
</script>
